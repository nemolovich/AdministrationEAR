
                            <p:tab id="services" title="Services">
                                <p:dataTable id="clientServicesList"
                                             value="#{servicesMultiView.getData(clientView.entity.servicesList)}"
                                             var="services"
                                             widgetVar="clientServicesTable"
                                             rowIndexVar="index"
                                             paginatorPosition="bottom"
                                             emptyMessage="Aucun service n'a été trouvé"
                                             rowStyleClass="v_top"
                                             paginator="true"
                                             rows="#{utils.maxDataRows}"
                                             sortBy="#{services.title}"
                                             selection="#{servicesMultiView.multiSelection}">
                                    
                                    <p:ajax event="rowSelectCheckbox"
                                            process="@this"
                                            update=":createServicesForm
                                             clientServicesList:servicesDelete" />
                                    <p:ajax event="rowUnselectCheckbox"
                                            process="@this"
                                            update=":createServicesForm
                                             clientServicesList:servicesDelete" />
                                    <p:ajax event="toggleSelect"
                                            process="@this"
                                            update=":createServicesForm
                                             clientServicesList:servicesDelete" />

                                    <p:column selectionMode="multiple" style="width:2%">
                                    </p:column>

                                    <p:column headerText="Détails" style="width:100%;">
                                        <h:outputText value="#{services.toString()}"/>
                                    </p:column>
                                    
                                    <p:column headerText="Actions" style="white-space: nowrap;">
                                        <p:commandButton actionListener="#{servicesView.entityView(services)}"
                                                         icon="ui-icon-search"
                                                         style="font-size: 60%;"
                                                         title="Détails de ce service"
                                                         update=":createServicesForm"
                                                         oncomplete="createServices.show();"/>
                                        <p:commandButton actionListener="#{servicesView.entityUpdate(services)}"
                                                         icon="ui-icon-pencil"
                                                         style="font-size: 60%;"
                                                         title="Modifier ce service"
                                                         update=":createServicesForm"
                                                         oncomplete="createServices.show();"/>
                                        <p:commandButton actionListener="#{servicesView.entityDelete(clientView.entity, services)}"
                                                         action="javascipt:void(0);"
                                                         icon="ui-icon-trash"
                                                         oncomplete="clientServicesTable.filter();"
                                                         update=":clientUpdate :growl :clientUpdate:clientTabView:clientServicesList"
                                                         style="font-size: 60%;"
                                                         styleClass="red_icon"
                                                         onclick="if(!confirm('#{servicesView.getDeleteMessage(services)}')){return false;}"
                                                         title="Supprimer ce service"/>
                                    </p:column>
                                    
                                    <f:facet name="footer">
                                        <p:outputPanel style="float:left">
                                            <p:commandButton value="Ajouter un service"
                                                             icon="ui-icon-circle-plus"
                                                             styleClass="green_icon"
                                                             title="Ajouter un service à cette société"
                                                             update=":createServicesForm"
                                                             actionListener="#{servicesView.entityCreate(clientView.entity)}"
                                                             onclick="createServices.show();"/>
                                            <p:commandButton id="servicesDelete"
                                                             value="Supprimer"
                                                             icon="ui-icon-trash"
                                                             widgetVar="servicesDeleteButton"
                                                             styleClass="red_icon"
                                                             title="Supprimer les services sélectionnés"
                                                             update=":clientUpdate :growl :clientUpdate:clientTabView:clientServicesList @this"
                                                             disabled="#{servicesMultiView.emptySelection}"
                                                             actionListener="#{servicesView.remove(clientView.entity,
                                                                               servicesMultiView.multiSelection)}"
                                                             oncomplete="if(#{servicesMultiView.checkEmptySelection()}!='true'){
                                                                    clientServicesTable.filter();}"
                                                             onclick="if(#{servicesMultiView.emptySelection})
                                                                {return false;}
                                                                else{if(!confirm('#{servicesView.deleteMessages(servicesMultiView.multiSelectionCast)}')){return false;}}"/>
                                        </p:outputPanel>
                                    </f:facet>
                                </p:dataTable>
                                <script type="text/javascript">
                                    $(document).ready(function()
                                    {
                                        forceFilter(clientServicesTable);
                                    });
                                </script>
                            </p:tab>